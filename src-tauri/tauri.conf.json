{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "ESPHome Builder",
  "version": "0.1.0",
  "identifier": "io.esphome.builder",
  "build": {
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [],
    "trayIcon": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": false,
      "id": "main"
    },
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "minimumSystemVersion": "10.15",
      "frameworks": [],
      "exceptionDomain": "",
      "signingIdentity": null,
      "entitlements": null
    },
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": ""
    },
    "linux": {
      "appimage": {
        "bundleMediaFramework": false
      }
    },
    "resources": [
      "python"
    ]
  },
  "plugins": {
    "shell": {
      "open": true
    }
  }
}
